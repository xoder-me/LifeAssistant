<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<com.alex.app.lifeassistant.view.TitleBarView
		android:id="@+id/title_bar"
		android:layout_width="match_parent"
		android:layout_height="55dp"/>

	<com.alex.app.lifeassistant.widget.TitleIndicator
		android:id="@+id/pagerindicator"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:background="@color/base_color"
		app:footerColor="#fff"
		app:footerLineHeight="2dp"
		app:footerTriangleHeight="3dp"
		app:textColor="@color/tab_indicator_text"
		app:textSizeNormal="14sp"
		app:textSizeSelected="14sp"/>

	<com.alex.app.lifeassistant.view.ViewPagerCompat
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:duplicateParentState="true"/>

</LinearLayout>