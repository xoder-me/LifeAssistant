<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout
		android:id="@+id/rl_mine_query"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginBottom="5dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="5dp"
		android:background="@drawable/express_mine_search_back"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/iv_mine_query"
			android:layout_width="45dp"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:src="@drawable/express_mine_search"/>

		<EditText
			android:id="@+id/et_mine_query"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_toRightOf="@+id/iv_mine_query"
			android:background="@null"
			android:hint="单号/备注/快递公司"
			android:singleLine="true"/>
	</RelativeLayout>
</merge>